#!/usr/bin/env bash

# PID file in the current directory (required by the checker)
PID_FILE="myscript.pid"

# Cleanup function
cleanup() {
    rm -f "$PID_FILE"
    exit 0
}

# Traps
trap 'echo "Y U no love me?!";' SIGINT
trap 'echo "I hate the kill command"; cleanup' SIGTERM
trap 'cleanup' SIGQUIT

# Write PID to file
echo "$$" > "$PID_FILE"

# Infinite loop
while true
do
    echo "To infinity and beyond"
    sleep 2
done
